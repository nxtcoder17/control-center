{
  "manifest_version": 2,
  "name": "Control Center",
  "version": "1.3.2",

  "description": "Control Center for Firefox",

  "icons": {
    "48": "icons/logo-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://open.spotify.com/*"],
      "js": ["src/content-scripts/spotify.com.js"]
    },
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["src/content-scripts/music.youtube.com.js"]
    },
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["src/content-scripts/youtube.com.js"]
    }
  ],

  "background": {
    "scripts": ["src/scripts/background.ts"]
  },

  "options_ui": {
    "page": "src/options.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],

  "commands": {
    "control-center": {
      "suggested_key": { 
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Send a 'toggle-feature' event to the extension"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "control-center@nxtcoder17.me",
      "strict_min_version": "63.0"
    }
  },

  "browser_action": {
    "default_icon": "icons/logo-48.png",
    "default_title": "Control Center"
  }
}
